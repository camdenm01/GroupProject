<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/castle2"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/leaderboard_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:backgroundTint="#4D000000"
        android:fontFamily="@font/press_start_2p"
        android:paddingTop="10dp"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:text="Leaderboard"
        android:textSize="13sp"
        app:cornerRadius="@dimen/button_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/credits_button"
        app:strokeColor="@color/black"
        app:strokeWidth="1sp" />

    <Button
        android:id="@+id/tutorial_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:backgroundTint="#4D000000"
        android:fontFamily="@font/press_start_2p"
        android:paddingTop="10dp"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:text="@string/how_to_play"
        android:textSize="12sp"
        app:cornerRadius="@dimen/button_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_button"
        app:strokeColor="@color/black"
        app:strokeWidth="1sp" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/press_start_2p"
        android:shadowColor="#555555"
        android:shadowDx="10.0"
        android:shadowDy="2.0"
        android:shadowRadius="5.0"
        android:text="@string/game_title"
        android:textColor="#000000"
        android:textSize="@dimen/text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/game_start_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:backgroundTint="#4D000000"
        android:fontFamily="@font/press_start_2p"
        android:paddingTop="10dp"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:text="@string/play_button"
        app:cornerRadius="@dimen/button_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        app:strokeColor="@color/black"
        app:strokeWidth="1sp" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:backgroundTint="#4D000000"
        android:fontFamily="@font/press_start_2p"
        android:paddingTop="10dp"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:text="@string/game_settings"
        app:cornerRadius="@dimen/button_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_start_button"
        app:strokeColor="@color/black"
        app:strokeWidth="1sp" />

    <Button
        android:id="@+id/credits_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:backgroundTint="#4D000000"
        android:fontFamily="@font/press_start_2p"
        android:paddingTop="10dp"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:text="@string/team_member_credits"
        app:cornerRadius="@dimen/button_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_button"
        app:strokeColor="@color/black"
        app:strokeWidth="1sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
